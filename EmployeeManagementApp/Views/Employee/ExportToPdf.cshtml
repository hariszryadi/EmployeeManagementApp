@model IEnumerable<EmployeeManagementApp.Models.Employee>

@{
    ViewData["Title"] = "Export PDF";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Pegawai</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                color: #333;
                margin-bottom: 5px;
            }

            .header p {
                color: #666;
                margin-top: 0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-size: small;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .currency {
            text-align: right;
        }

        .date {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Daftar Pegawai</h1>
        <p>Tanggal: @DateTime.Now.ToString("dd MMMM yyyy")</p>
    </div>

    <p>
