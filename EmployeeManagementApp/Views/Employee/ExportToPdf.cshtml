@model IEnumerable<EmployeeManagementApp.Models.Employee>

@{
    ViewData["Title"] = "Export PDF";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Pegawai</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                color: #333;
                margin-bottom: 5px;
            }

            .header p {
                color: #666;
                margin-top: 0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-size: small;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .currency {
            text-align: right;
        }

        .date {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Daftar Pegawai</h1>
        <p>Tanggal: @DateTime.Now.ToString("dd MMMM yyyy")</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama Pegawai</th>
                <th>Jabatan</th>
                <th>Departemen</th>
                <th>Tanggal Bergabung</th>
                <th>Gaji</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Department</td>
                    <td class="date">@item.JoinDate.ToString("dd/MM/yyyy")</td>
                    <td class="currency">@string.Format("{0:N0}", item.Salary)</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>